# Server Configuration
NODE_ENV=development
PORT=3001

# Database (PostgreSQL with PostGIS)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/globenews
DB_MAX_CONNECTIONS=20

# Redis Cache
REDIS_URL=redis://localhost:6379

# GDELT API (free, no key required)
GDELT_RATE_LIMIT=10

# NewsAPI.org (free tier: 100 requests/day)
# Sign up at: https://newsapi.org/
NEWSAPI_KEY=your_newsapi_key_here

# EventRegistry.org (free tier: 2000 tokens/month)
# Sign up at: https://eventregistry.org/
EVENTREGISTRY_KEY=your_eventregistry_key_here

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Worker Configuration
ENABLE_WORKER=false
